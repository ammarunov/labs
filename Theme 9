using System;

namespace TestLearning
{
	class Program
	{
		static void Main(string[] args)
		{
			while (true)
			{
				Console.WriteLine("Задание к теме 8.");
				Console.WriteLine(" ");
				Console.WriteLine(@"Выберите выполняемую программу:
            - С начала суток прошло N секунд (N — целое). Найти количество секунд, прошедших с начала последней минуты. (введите 1)
            - Дни недели пронумерованы следующим образом: 0 — воскресенье, 1 — понедельник, 2 — вторник, . . . , 6 — суббота. Дано целое число K, лежащее в диапазоне 1–365. Определить номер дня недели для K-го дня года, если известно, что в этом году 1 января было понедельником. (введите 2)
            - Дни недели пронумерованы следующим образом: 1 — понедельник, 2 — вторник, . . . , 6 — суббота, 7 — воскресенье. Дано целое число K, лежащее в диапазоне 1–365, и целое число N, лежащее в диапазоне 1–7. Определить номер дня недели для K-го дня года, если известно, что в этом году 1 января было днем недели с номером N. (введите 3)
            - Даны целые положительные числа A, B, C. На прямоугольнике размера A × B размещено максимально возможное количество квадратов со стороной C (без наложений). Найти количество квадратов, размещенных на прямоугольнике, а также площадь незанятой части прямоугольника. (введите 4)
            - Дан номер некоторого года (целое положительное число). Определить соответствующий ему номер столетия, учитывая, что, к примеру, началом 20 столетия был 1901 год. (введите 5)");
				string q = Console.ReadLine();
				if (q == "1")
				{
					int N;
					Console.WriteLine("Сколько прошло секунд?");
					N = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine($"С начала последней секунды прошло {N % 60} секунд.");

				}
				if (q == "2")
				{
					int K;
					Console.WriteLine("Введите порядковый номер интересующего дня года (в диапазоне 1-365).");
					Console.Write("K = ");
					K = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine($"Номер дня недели для {K}-го дня года равен {K % 7} на данных условиях.");
				}
				if (q == "3")
				{
					int K, N;
					Console.WriteLine("Введите порядковый номер интересующего дня года (в диапазоне 1-365).");
					Console.Write("K = ");
					K = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine("Номер какого дня недели имеет 1 января? (в диапазоне 1-7)");
					Console.Write("N = ");
					N = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine($"Номер дня недели для {K}-го дня года равен {K % 7 + (N - 1)} на данных условиях.");

				}
				if (q == "4")
				{
					int A, B, C, n, S;
					Console.WriteLine("Какие стороны имеет прямоугольник AxB?");
					Console.Write("A = ");
					A = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine("B = ");
					B = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine("Чему равна сторона квадрата?");
					Console.Write("C = ");
					C = Convert.ToInt32(Console.ReadLine());
					n = (A * B) / Convert.ToInt32(Math.Pow(C, 2));
					S = (A * B) % Convert.ToInt32(Math.Pow(C, 2));
					Console.WriteLine($"Количество квадратов, размещенных в прямоугольнике, равно {n}, а площадь незанятой площади прямоугольника равно {S}.");
				}
				if (q == "5")
				{
					int N;
					Console.WriteLine("Какой номер интересующего года?");
					N = Convert.ToInt32(Console.ReadLine());
					if ((N % 100) > 0)
                    {
						Console.WriteLine($"Соответствующий данному году номер столетия равен {N / 100 + 1}.");
                    }
                    else
                    {
						Console.WriteLine($"Соответствующий данному году номер столетия равен {N / 100}.");
					}
				}
				Console.WriteLine("Продолжить программу? Введите \"+\" чтобы продолжить, в ином случае - что угодно.");
				string answ = Console.ReadLine();
				if (answ == "+")
				{
					continue;
				}
				else
				{
					break;
				}

			}
		}

	}
}
