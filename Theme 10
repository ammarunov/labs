					Console.WriteLine("Справедливы неравенства A > 2 и B ≤ 3 для данных чисел A и B.");
					if ((A > 2) && (B <= 3))
                    {
						Console.Write("Истина.");
                    }
                    else
                    {
						Console.Write("Ложь.");
					}

