					B = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine("Введите третье число C.");
					C = Convert.ToInt32(Console.ReadLine());
					Console.WriteLine("Справедливо двойное неравенство A < B < C для данных чисел A и B.");
					if ((A < B) && (B < C))
					{
						Console.Write("Истина.");
					}
					else
					{
						Console.Write("Ложь.");
					}
